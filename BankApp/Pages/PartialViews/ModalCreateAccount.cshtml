@model BankApp.Pages.CustomerPages.CustomerListModel
@{
}
<!-- Create Account Modal -->
<div id="myModalCreateAccount-@Model.CustomerID" class="modal fade" tabindex="-1" aria-labelledby="myModalCreateAccount-@Model.CustomerID" aria-hidden="true">
    <div class="modal-dialog">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalCreateAccount-@Model.CustomerID">Opret Konto for @Model.Choosen_FirstName</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" enctype="multipart/form-data" asp-page="/CustomerPages/CustomerList" asp-route-id="@Model.CustomerID" asp-page-handler="CreateAccount">
                <div class="modal-body text-center">
                    <div class="row">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" asp-for="Choosen_AccountName">
                            <label for="Choosen_AccountName">Konto navn</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" asp-for="Choosen_AccountType">
                            <label for="Choosen_AccountType">Konto type</label>
                        </div>
                    </div>
                    <!--Modal footer-->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Fortryd</button>
                        <input type="submit" value="Opret konto" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>